set nocompatible

syntax on

set fileencodings=utf-8,cp1251,cp866,koi8-r,latin1
set encoding=utf-8

set expandtab
set shiftwidth=2
set smarttab
set smartindent
set softtabstop=2
set tabstop=2

set hlsearch
set incsearch
set nowrapscan
set ignorecase

set backspace=indent,eol,start
set backup
set completeopt-=preview
set completeopt+=longest
set hidden
set matchpairs+=<:>
set noswapfile
set nowrap
set number
set ruler
set scrolloff=10
set showcmd
set showmatch
set sidescroll=20
